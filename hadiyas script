# Daily Expense Tracker

expenses = []  # List to store all expense dictionaries
categories = {"Food", "Transport", "Shopping", "Utilities", "Entertainment"}  
daily_limit = 1000  # Daily spending limit

def add_expense():
    print("Enter Expense Amount: ")









    amount = float(input())  # Taking user input for amount

    category = input("Enter Category: ").capitalize()

    if category in categories:
        expense = {"amount": amount, "category": category}
        expenses.append(expense)
        print("Expense added successfully!")
    else:
        print("Invalid category.")

def view_summary():
    if not expenses:
        print("No expenses recorded.")
        return  # Go back to menu

    total = 0
    for expense in expenses:
        print("Category:", expense["category"], "| Amount:", expense["amount"])
        total += expense["amount"]

    print("Total spent today:", total)
    if total > daily_limit:
        print("Warning: You have crossed your daily limit!")


while True:
    print("\n--- Daily Expense Tracker ---")
    print("1. Add Expense")
    print("2. View Summary")
    print("3. Exit")

    choice = input("Enter your choice (1-3): ")

    if choice == "1":
        add_expense()
    elif choice == "2":
        view_summary()
    elif choice == "3":
        print("Exiting program...")
        break
    else:
        print("Invalid choice. Please try again.")
